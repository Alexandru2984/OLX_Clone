# Environment variables - nu include în Git!
# Copiază acest fișier ca .env și completează valorile

# Django
SECRET_KEY=your-very-secret-key-here-generate-new-one
DEBUG=True

# Database - SQLite (default)
# Pentru SQLite (dezvoltare), lasă goale valorile de mai jos
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Database - PostgreSQL (producție)
# Pentru PostgreSQL, decomentează și completează:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=olx_clone_db
# DB_USER=olx_user
# DB_PASSWORD=your_strong_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=noreply@olxclone.com

# Pentru alte provideri de email:
# Outlook: EMAIL_HOST=smtp-mail.outlook.com
# Yahoo: EMAIL_HOST=smtp.mail.yahoo.com
# Pentru Gmail trebuie să folosești App Password, nu parola normală!

# Site settings
SITE_ID=1
SITE_DOMAIN=localhost:8000
SITE_NAME=OLX Clone

# Pentru producție
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Media/Static (pentru producție)
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static
